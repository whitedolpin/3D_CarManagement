<Window x:Class="_3DCarManagement.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3DCarManagement"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Label Content="LOGIN " HorizontalAlignment="Center" Margin="0,96,0,0" VerticalAlignment="Top" Width="52"/>
        <Label Content="Username: " HorizontalAlignment="Left" Margin="163,149,0,0" VerticalAlignment="Top"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="163,0,0,0" VerticalAlignment="Center"/>
        <TextBox x:Name="TxtUsername" HorizontalAlignment="Left" Margin="280,153,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="295" Height="22"/>
        <PasswordBox x:Name="TxtPassword" HorizontalAlignment="Left" Margin="280,204,0,0" VerticalAlignment="Top" Width="295" Height="22" />
        <Button x:Name="LoginBTN" Content="Login" HorizontalAlignment="Left" Margin="483,259,0,0" VerticalAlignment="Top" Width="92" Click="LoginBTN_Click"/>


    </Grid>
</Window>
