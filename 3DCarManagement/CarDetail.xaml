<Window x:Class="_3DCarManagement.CarDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3DCarManagement"
        mc:Ignorable="d"
        Title="CarDetail" Height="450" Width="800">
    <Grid>
        <Viewport3D Margin="0,0,400,0">
            <Viewport3D.Camera>
                <PerspectiveCamera Position="5 5 5" LookDirection="-1 -1 -1" UpDirection="0 1 0" />
            </Viewport3D.Camera>

            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <!-- Your 3D model goes here -->
                    <Model3DGroup>
                        <AmbientLight Color="White" />
                        <DirectionalLight Color="White" Direction="-1,-1,-1" />
                        <!-- Add your 3D geometry, materials, etc. -->
                    </Model3DGroup>
                </ModelVisual3D.Content>
            </ModelVisual3D>
        </Viewport3D>
    </Grid>

    
</Window>
